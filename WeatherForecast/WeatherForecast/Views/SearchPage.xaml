<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherForecast.Views.SearchPage">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#7585BA">
            <Grid >
                <Image Aspect="AspectFill"  Source="overlay.png" HeightRequest=" 1200"
                       HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

                <StackLayout HorizontalOptions="Center" Margin="0,30,0,0">
                    <Entry x:Name="NewLocationEntry" Placeholder="City name..." PlaceholderColor="WhiteSmoke"  TextColor="WhiteSmoke"/>
                    <Button Text="Search" Clicked="Button_Clicked" TextColor="#7585BA" BackgroundColor="WhiteSmoke"
                    HorizontalOptions="Center" WidthRequest="200" HeightRequest="50" CornerRadius="15"/>
                </StackLayout>

            </Grid >
        </StackLayout>
    </ContentPage.Content>
</ContentPage>