<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeatherForecast.Views.AddLocation">
    <ContentPage.Content>
        <StackLayout BackgroundColor="#7585BA">
            <Grid>
                <Image Aspect="AspectFill"  Source="overlay.png" HeightRequest=" 1200"
                       HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand"/>

                <StackLayout  HorizontalOptions="Center" Margin="0,30,0,0">
                    <Label Text="Add city to the list" FontSize="Title" HorizontalTextAlignment="Center" TextColor="WhiteSmoke"/>
                    <Entry x:Name="newCity" Placeholder="London..."  PlaceholderColor="WhiteSmoke" TextColor="WhiteSmoke"/>
                    <Button x:Name="newCityBtn" Text="Add City" Clicked="newCityBtn_Clicked" TextColor="#7585BA" 
                            BackgroundColor="WhiteSmoke" HorizontalOptions="Center" WidthRequest="200" 
                            HeightRequest="50" CornerRadius="15"/>
                </StackLayout>

            </Grid>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>